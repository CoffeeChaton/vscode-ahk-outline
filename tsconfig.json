{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ES2018",
        "outDir": "out",
        "lib": [
            "ES2017.String",
            "ES2018",
            "ES2019",
            "dom",
            "ES2018.RegExp",
            "ES2020.string",
            "ES2020",
            "ESNext"
        ],
        "sourceMap": true,
        "rootDir": "src",
        "strictNullChecks": true,
        "removeComments": true,
        /* Strict Type-Checking Options */
        "strict": true,
        "noImplicitAny": true,
        "alwaysStrict": true,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        //    "strictFunctionTypes": true,
        "strictBindCallApply": true,
        "strictPropertyInitialization": true
    },
    "exclude": ["node_modules"],
    "typeRoots": ["node_modules/@types"]
}
