{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ESNext",
    "outDir": "out",
    "lib": ["ES2018", "ES2019", "dom", "ES2018.RegExp"],
    "sourceMap": true,
    "rootDir": "src",
    "strictNullChecks": true,
    "removeComments": true,
    "strict": true,
    "noImplicitAny": true,
    "alwaysStrict": true,
    "noImplicitThis": true,
    "noImplicitReturns": true
  },
  "exclude": ["node_modules"],

  "typeRoots": ["node_modules/@types"]
}
